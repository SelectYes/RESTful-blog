<%- include('partials/header') %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <h5><%= blog.created.toDateString() %></h5>
    <div class="ui top attached">

        <div class="ui image">
            <img class="ui centered rounded image" src="<%= blog.image %>" alt="">
        </div>

        <div class="ui hidden divider"></div>
        <div class="content">
            <p><%= blog.body %></p>
        </div>
        <div class="ui hidden divider"></div>

        <a href="/blogs"><button class="ui blue button">Back</button></a>
        <a href="/blogs/<%= blog._id %>/edit"><button class="ui black button">Edit</button></a>
        <form id="inline-form" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
            <button type="submit" class="ui red basic button">Delete</button>
        </form>

    </div>
</div>

<%- include('partials/footer') %>